ip=$(hostname -i)
if [[ $ip = *\ * ]]; then
    echo "CRITICAL: More than one ip is found by hostname -i | status=1"
    exit 1
else
    if [[ $ip = 127.* ]]; then
        echo "CRITICAL: IP returned by hostname -i should not start with 127.* | status=2"
        exit 2
    else
        echo "OK: IP returned by hostname -i is good | status=0"
    fi
fi
